<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius = "10dp"
    android:layout_margin="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">



        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:id = "@+id/order_title2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Title here"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="90"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id = "@+id/order_quantity2"
                        android:textColor="#737078"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Qty : 2"
                        android:textSize="12sp"></TextView>


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id = "@+id/order_price2"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:text="Rs 1200"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageButton
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ovalbutton"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_add_white"
                            android:adjustViewBounds="true"
                            android:id="@+id/add2"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitCenter"/>
                        <ImageButton
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ovalbutton"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_minus_white"
                            android:adjustViewBounds="true"
                            android:id="@+id/minus2"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitCenter"/>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/price_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:hint="Price"
                        android:fontFamily="sans-serif-condensed"
                        android:background="#ffb6c1"
                        android:minLines="1"
                        android:maxLines="3"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine"
                        android:layout_marginTop="30dp"
                        />


                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/roundbutton"
                        android:layout_gravity="center"
                        android:text="set price"
                        android:id="@+id/set_price"/>

                     </FrameLayout>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>